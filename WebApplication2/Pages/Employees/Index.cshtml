    ViewData["Title"] = "Index";
}

<h1>Работники</h1>

<p>
    <a asp-page="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].sex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].pasportData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].contributionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].position)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employee) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pasportData)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contributionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.position.ID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Подробности</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
